<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
            motion:constraintSetStart="@+id/start"
            motion:constraintSetEnd="@+id/end"
            motion:duration="500">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myImageView"
                android:src="@drawable/ic_launcher_background_size"
                motion:layout_constraintVertical_bias="0.0"
                motion:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                motion:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                motion:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myImageView"
                android:src="@drawable/ic_launcher_background_size"
                motion:layout_constraintVertical_bias="0.0"
                motion:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                motion:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                motion:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="64dp"
                motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

</MotionScene>