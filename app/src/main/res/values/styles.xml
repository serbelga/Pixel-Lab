<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/blue</item>

        <!-- Status Bar color and windowLightStatusBar true if Status bar is Light and false if it's dark-->
        <item name="android:statusBarColor">@color/whiteDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialButtonStyle">
            @style/AppButton
        </item>

        <item name="textAppearanceButton">
            @style/ButtonText
        </item>

        <item name="textAppearanceBody1">
            @style/Body1Text
        </item>

        <item name="textAppearanceBody2">
            @style/Body2Text
        </item>

        <item name="textAppearanceCaption">
            @style/CaptionText
        </item>

        <item name="textAppearanceHeadline4">
            @style/Headline4Text
        </item>

        <item name="textAppearanceHeadline5">
            @style/Headline5Text
        </item>

        <item name="textAppearanceHeadline6">
            @style/Headline6Text
        </item>

        <item name="floatingActionButtonStyle">
            @style/MyFloatingActionButton
        </item>

        <item name="shapeAppearanceSmallComponent">@style/SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/LargeComponent</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Body1Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Body2Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Headline4Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Headline5Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Headline6Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FloatingActionButton</item>
    </style>

    <style name="FloatingActionButton" parent="">
        <item name="cornerSize">@null</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
